<ContentControl x:Class="LoginISP.Auth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LoginISP"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <TextBlock Text="Страница Авторизации" x:Name="txblTextBlock" FontFamily="Candara" FontSize="16"/>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="LoginWord" Text="Логин" Width="200"/>
            <TextBox x:Name="txbLogin" Width="200" Height="20" Margin="5"/>
            <TextBlock x:Name="PasswordWord" Text="Пароль" Width="200"/>
            <PasswordBox x:Name="psbPassword" Width="200" Height="20"/>
            <Button x:Name="btnLogin" Content="Login" Width="100" Height="20" Margin="5" Background="Gray" Click="btnLogin_Click"/>
        </StackPanel>
    </Grid>
</ContentControl>
