<Window x:Class="LoginISP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginISP"
        mc:Ignorable="d"
        Title="LoginISP" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="350*"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="txbcTextBlock" Text="MainWindow" Style="{StaticResource txbTitle}"/>
        <Button x:Name="btnButton" x:FieldModifier="public" Content="Menu" Width="80" Height="20" Style="{StaticResource btnButton}" Click="btnButton_Click" Margin="690,10,10,10"/>
        <Frame x:Name="frmMenu" Grid.Row="1" NavigationUIVisibility="Hidden"/>


    </Grid>
</Window>
